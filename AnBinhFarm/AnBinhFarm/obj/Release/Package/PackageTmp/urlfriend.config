<?xml version="1.0"?>
<configuration>

    <system.web>
      <compilation debug="true" targetFramework="4.5" />
      <httpRuntime targetFramework="4.5" />
    </system.web>
  <urlrewritingnet  rewriteOnlyVirtualUrls="true" contextItemsPrefix="QueryString" defaultProvider="RegEx" xmlns="http://www.urlrewriting.net/schemas/config/2006/07">
    <rewrites>
      <add name="SanPham" virtualUrl="^~/sp/(.*)/(.*).aspx" rewriteUrlParameter="ExcludeFromClientQueryString" destinationUrl="~/ChiTietSp.aspx?Sp=$1&amp;ten=$2" ignoreCase="true"/>
      <add name="SanPham_list" virtualUrl="^~/sp-list/(.*)/(.*).aspx" rewriteUrlParameter="ExcludeFromClientQueryString" destinationUrl="~/GroupIterm.aspx?loai=$1&amp;ten=$2" ignoreCase="true"/>
      <add name="SanPham_listsearch" virtualUrl="^~/sp-list-search/(.*)/(.*)/(.*)/(.*)/(.*).aspx" rewriteUrlParameter="ExcludeFromClientQueryString" destinationUrl="~/GroupIterm.aspx?loai=$1&amp;to=$2&amp;from=$3&amp;hg=$4" ignoreCase="true"/>
      <add name="SanPham_detail" virtualUrl="^~/sp-detail/(.*)/(.*)/(.*).aspx" rewriteUrlParameter="ExcludeFromClientQueryString" destinationUrl="~/Default.aspx?View=ProductDetail&amp;gid=$1&amp;pid=$2" ignoreCase="true"/>
      <add name="SanPham_Result" virtualUrl="^~/tim-kiem.aspx" rewriteUrlParameter="ExcludeFromClientQueryString" destinationUrl="~/Default.aspx?View=SearchResult" ignoreCase="true"/>

      <add name="baiviet" virtualUrl="^~/bv/(.*)/(.*).aspx" rewriteUrlParameter="ExcludeFromClientQueryString" destinationUrl="~/Chitietbv.aspx?bv=$1&amp;ten=$2" ignoreCase="true"/>
      <add name="baiviet_list" virtualUrl="^~/bv-list/(.*)/(.*).aspx" rewriteUrlParameter="ExcludeFromClientQueryString" destinationUrl="~/Baiviet.aspx?loai=$1&amp;ten=$2" ignoreCase="true"/>

      <!-- bài viết chi tiết-->
      <add name="gioitieu" virtualUrl="^~/gioi-thieu.aspx" rewriteUrlParameter="ExcludeFromClientQueryString" destinationUrl="~/Chitietbv.aspx?bv=3" ignoreCase="true"/>
      <add name="cpvanchuyen" virtualUrl="^~/chi-phi-van-chuyen.aspx" rewriteUrlParameter="ExcludeFromClientQueryString" destinationUrl="~/Chitietbv.aspx?bv=4" ignoreCase="true"/>
      <add name="ptthanhtoan" virtualUrl="^~/phuong-thuc-thanh-toan.aspx" rewriteUrlParameter="ExcludeFromClientQueryString" destinationUrl="~/Chitietbv.aspx?bv=5" ignoreCase="true"/>
      <add name="ptdoitra" virtualUrl="^~/quy-dinh-doi-va-tra-hang.aspx" rewriteUrlParameter="ExcludeFromClientQueryString" destinationUrl="~/Chitietbv.aspx?bv=6" ignoreCase="true"/>
      <add name="lienlacx" virtualUrl="^~/lien-he.aspx" rewriteUrlParameter="ExcludeFromClientQueryString" destinationUrl="~/Chitietbv.aspx?bv=7" ignoreCase="true"/>
      <add name="huongdanmua" virtualUrl="^~/huong-dan-mua-hang.aspx" rewriteUrlParameter="ExcludeFromClientQueryString" destinationUrl="~/Chitietbv.aspx?bv=8" ignoreCase="true"/>

    </rewrites>
  </urlrewritingnet>
</configuration>
